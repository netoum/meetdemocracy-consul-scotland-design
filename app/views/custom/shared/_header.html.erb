<% if header.present? %>
<header class="ds_feature-header">
  <div class="ds_feature-header__primary">
      <span><%= header.label %></span>
      <h1 class="ds_feature-header__title"><%= header.title %></h1>
      <p><%= header.description %></p>
      <% if header.link_text.present? && header.link_url.present? %>
        <%= link_to header.link_text, header.link_url, class: "ds_button" %>
    <% end %>
  </div>


  <% if header.image.present? %>
  <div class="ds_feature-header__secondary">
    <%= image_tag(header.image.variant(:large),
    class: "ds_feature-header__image",
    alt: header.image.title) %>
    </div>
<% end %>

</header>


<% end %>
