<header class="ds_site-header  ds_site-header--gradient" role="banner">
  <div class="ds_wrapper">
    <div class="ds_site-header__content">
      <div class="ds_site-branding">
        <%= link_to root_path, accesskey: "0", class:"ds_site-branding__logo  ds_site-branding__link" do %>
        <%= image_tag(image_path_for("logo_small_black.png"), alt: setting["org_name"], class:"ds_site-branding__logo-image") %>
        <% end %>
        <div class="ds_site-branding__title">
          Demonstration
        </div>
      </div>
      <div class="ds_site-header__controls">
        <label aria-controls="mobile-navigation" class="ds_site-header__control  js-toggle-menu" for="menu">
          <span class="ds_site-header__control-text">Menu</span>
          <span class="menu-icon"></span>
        </label>
      </div>
      <input class="ds_site-navigation__toggle" id="menu" type="checkbox" />
      <nav id="mobile-navigation" class="ds_site-navigation  ds_site-navigation--mobile"
        data-module="ds-mobile-navigation-menu">
        <%= render Layout::AccountMenuComponent.new(current_user) %>
        <%= render Layout::SubnavigationComponent.new %>
      </nav>
      <nav class="ds_site-navigation">
        <%= render Layout::AccountMenuComponent.new(current_user) %>
      </nav>
    </div>
    <div class="ds_site-header__navigation">
      <div class="ds_wrapper">
        <nav class="ds_site-navigation">
          <%= render Layout::SubnavigationComponent.new %>
        </nav>
      </div>
    </div>
  </div>
</header>
